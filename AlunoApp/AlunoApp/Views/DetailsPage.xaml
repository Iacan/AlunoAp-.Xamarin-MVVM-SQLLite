<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AlunoApp.Views"
             x:Class="AlunoApp.Views.DetailsPage"
             Title="Detalhes do Aluno">
    <StackLayout Padding="10" Spacing="5">
        <local:AlunoView />
        <Button Text="Atualizar" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="White" 
                BackgroundColor="#5989B5" Command="{Binding UpdateAlunoCommand}" />
        <Button Text="Deletar" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="White" 
                BackgroundColor="#f6546a" Command="{Binding DeleteAlunoCommand}" />
    </StackLayout>
</ContentPage>